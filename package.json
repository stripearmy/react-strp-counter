{
  "name": "react-strp-counter",
  "author": "Arsen Mkrtchyan (stripearmy)",
  "private": false,
  "version": "1.0.5",
  "description": "A lightweight counter that relies on CSS to rearrange numbers and doesn't rerender Elements",
  "type": "module",
  "main": "dist/react-strp-counter.umd.js",
  "module": "dist/react-strp-counter.es.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/stripearmy/react-strp-counter.git",
  "license": "MIT",
  "keywords": [
    "react",
    "counter",
    "digit",
    "number",
    "css counter",
    "number counter",
    "number animation",
    "counter animation",
    "digit animation",
    "casino counter",
    "casino digits",
    "casino numbers",
    "jackpot counter",
    "jackpot numbers",
    "jackpot digits",
    "flip",
    "flip counter",
    "flip numbers",
    "flip digits",
    "odometer",
    "css odometer",
    "react odomteter"
  ],
  "files": [
    "dist",
    "styles"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-strp-counter.umd.js"
    },
    "./css": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-strp-counter.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite-plugin-dts": "^4.5.3"
  }
}
